# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#rest style urls : http://stackoverflow.com/questions/2001773/understanding-rest-verbs-error-codes-and-authentication

# Home page
GET     /                           controllers.Application.index()

#Notebooks
GET     /notebooks                  controllers.NotebookController.list()
POST	/notebooks					controllers.NotebookController.create(title:String)
DELETE  /notebooks/:id       		controllers.NotebookController.delete(id:String)
PUT     /notebook/:id     			controllers.NotebookController.update(id:String)

#Notes
GET     /notebooks/:id/notes       	controllers.NoteController.list(id:String)

# Javascript routing
GET     /assets/javascripts/routes          controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#temp to create notebooks
GET	/notebooks/create/:title					controllers.NotebookController.create(title:String)